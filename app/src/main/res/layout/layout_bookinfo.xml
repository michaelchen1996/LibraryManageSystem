<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_BookInfo"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"

    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:layout_weight="0.04"
        android:gravity="center_vertical"
        android:textSize="30dp"
        android:id="@+id/show_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Author:  "
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textSize="20dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="ISBN:  "
                android:layout_weight="1"
                android:textSize="20dp"
                android:layout_gravity="right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="call_num:  "
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textSize="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Status:  "
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textSize="20dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Location:  "
                android:layout_weight="1"
                android:layout_gravity="right"
                android:textSize="20dp"
                 />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.04">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/show_author" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/show_isbn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/show_num" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/show_status" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:textSize="20dp"
                android:id="@+id/show_location" />

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center_horizontal">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reserve"
                android:textSize="20dp"
                android:id="@+id/show_button_reserve"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="review"
                android:textSize="20dp"
                android:id="@+id/show_button_review"
                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sec-hand"
                android:textSize="20dp"
                android:id="@+id/show_button_sechand"
                />


        </LinearLayout>

    </LinearLayout>






</LinearLayout>